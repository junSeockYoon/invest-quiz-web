    <!-- ê´€ì‹¬ì‚¬ ëª©ë¡ ë¡œë“œ ë° ì´ˆê¸°í™” -->
    <script>
        let selectedInterests = [];
        
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                const response = await fetch('/test/api/chapters');
                const result = await response.json();
                
                if (result.info && result.info.status === 'S' && result.dataset && result.dataset.data) {
                    const chapters = result.dataset.data;
                    displayInterests(chapters);
                } else {
                    console.error('ê´€ì‹¬ì‚¬ ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                    document.getElementById('interests-container').innerHTML = 
                        '<p class="w-full text-center text-red-500 py-8">ê´€ì‹¬ì‚¬ ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.</p>';
                }
            } catch (error) {
                console.error('ê´€ì‹¬ì‚¬ ëª©ë¡ ë¡œë“œ ì˜¤ë¥˜:', error);
                document.getElementById('interests-container').innerHTML = 
                    '<p class="w-full text-center text-red-500 py-8">ê´€ì‹¬ì‚¬ ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.</p>';
            }
        });

        function displayInterests(chapters) {
            const container = document.getElementById('interests-container');
            
            if (!chapters || chapters.length === 0) {
                container.innerHTML = '<p class="w-full text-center text-gray-500 py-8">ê´€ì‹¬ì‚¬ê°€ ì—†ìŠµë‹ˆë‹¤.</p>';
                return;
            }

            container.innerHTML = chapters.map((chapter) => {
                const chapterTitle = chapter.chapterTitle || '';
                // í‚¤ì›Œë“œ ì¶”ì¶œ: ê´„í˜¸ ì•ì˜ í…ìŠ¤íŠ¸ë§Œ ê°€ì ¸ì˜¤ê¸°
                // ì˜ˆ: "í™˜ìœ¨ (Exchange Rate)" â†’ "í™˜ìœ¨"
                const keyword = chapterTitle.split(' (')[0].trim();
                
                return `
                    <button 
                        type="button"
                        class="interest-button" 
                        id="interest-btn-${chapter.id}"
                        onclick="toggleInterest(${chapter.id}, this)">
                        <input type="checkbox" 
                               class="custom-checkbox" 
                               id="interest-${chapter.id}" 
                               value="${chapter.id}"
                               onchange="handleCheckboxChange(${chapter.id}, this.checked)">
                        ${keyword}
                    </button>
                `;
            }).join('');
        }

        function toggleInterest(chapterId, element) {
            const checkbox = document.getElementById(`interest-${chapterId}`);
            checkbox.checked = !checkbox.checked;
            handleCheckboxChange(chapterId, checkbox.checked);
        }

        function handleCheckboxChange(chapterId, isChecked) {
            if (isChecked) {
                if (!selectedInterests.includes(chapterId)) {
                    selectedInterests.push(chapterId);
                }
            } else {
                selectedInterests = selectedInterests.filter(id => id !== chapterId);
            }
            
            updateUI();
        }

        function updateUI() {
            // ì„ íƒëœ ë²„íŠ¼ì— selected í´ë˜ìŠ¤ ì¶”ê°€/ì œê±°
            selectedInterests.forEach(id => {
                const button = document.getElementById(`interest-btn-${id}`);
                if (button) {
                    button.classList.add('selected');
                }
            });
            
            // ì„ íƒ í•´ì œëœ ë²„íŠ¼ì—ì„œ selected í´ë˜ìŠ¤ ì œê±°
            document.querySelectorAll('.interest-button').forEach(button => {
                const checkbox = button.querySelector('input[type="checkbox"]');
                if (checkbox && !selectedInterests.includes(parseInt(checkbox.value))) {
                    button.classList.remove('selected');
                }
            });
            
            // ì„ íƒëœ ê°œìˆ˜ í‘œì‹œ
            const countElement = document.getElementById('selected-count');
            const countNumber = document.getElementById('count-number');
            const nextButton = document.getElementById('next-button');
            
            if (selectedInterests.length > 0) {
                countElement.classList.remove('hidden');
                countNumber.textContent = selectedInterests.length;
                
                // ë²„íŠ¼ í™œì„±í™”
                nextButton.classList.remove('bg-gray-300', 'text-gray-500', 'btn-disabled');
                nextButton.classList.add('bg-gradient-to-r', 'from-blue-500', 'to-indigo-600', 'text-white', 'btn-active', 'hover:opacity-90', 'transition-all');
                nextButton.disabled = false;
            } else {
                countElement.classList.add('hidden');
                
                // ë²„íŠ¼ ë¹„í™œì„±í™”
                nextButton.classList.add('bg-gray-300', 'text-gray-500', 'btn-disabled');
                nextButton.classList.remove('bg-gradient-to-r', 'from-blue-500', 'to-indigo-600', 'text-white', 'btn-active', 'hover:opacity-90', 'transition-all');
                nextButton.disabled = true;
            }
        }

        // ë‹¤ìŒ ë‹¨ê³„ ë²„íŠ¼ í´ë¦­ ì´ë²¤íŠ¸
        document.getElementById('next-button').addEventListener('click', function() {
            if (selectedInterests.length > 0) {
                // ì„ íƒëœ ê´€ì‹¬ì‚¬ë¥¼ ì„¸ì…˜ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
                sessionStorage.setItem('selectedInterests', JSON.stringify(selectedInterests));
                
                // ì±•í„° ì„ íƒ í˜ì´ì§€ë¡œ ì´ë™
                window.location.href = '/test/chapters';
            }
        });
    </script>
